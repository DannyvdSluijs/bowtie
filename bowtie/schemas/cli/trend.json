{
  "title": "bowtie trend",
  "description": "Trend data of supported implementation(s), emitted by `bowtie trend --format json`.",

  "$schema": "https://json-schema.org/draft/2020-12/schema",

  "$id": "tag:bowtie.report,2024:cli:trend",

  "type": "object",

  "$defs": {
    "count": {
      "type": "integer",
      "minimum": 0
    },
    "compliance": {
      "type": "object",
      "properties": {
        "skipped": { "$ref": "#/$defs/count" },
        "errored": { "$ref": "#/$defs/count" },
        "failed": { "$ref": "#/$defs/count" }
      },
      "required": ["skipped", "errored", "failed"],
      "additionalProperties": false
    }
  },

  "minProperties": 1,
  "propertyNames": {
    "$ref": "tag:bowtie.report,2024:models:dialect:uri"
  },
  "additionalProperties": {
    "type": "object",
    "propertyNames": {
      "$ref": "tag:bowtie.report,2024:models:implementation:version"
    },
    "additionalProperties": {
      "$ref": "#/$defs/compliance"
    }
  }
}
